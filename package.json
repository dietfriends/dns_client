{
  "name": "dns_client",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "lint": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#CLAUDE.md\"",
    "lint:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#CLAUDE.md\""
  },
  "devDependencies": {
    "dprint": "^0.51.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "markdownlint-cli2": "^0.20.0"
  },
  "lint-staged": {
    "*.dart": [
      "dart format",
      "dart analyze --fatal-warnings"
    ],
    "*.{md,markdown}": [
      "dprint fmt",
      "markdownlint-cli2 --fix"
    ]
  }
}
